<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Project Details</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            margin-top: 50px;
            background-color: #fff; /* Light background color */
            font-family: Arial, sans-serif; /* Font style */
        }

        .main-image {
            max-width: 100%;
            height: auto; /* Maintain aspect ratio */
            object-fit: contain; /* Fit within container */
            border: 1px solid #92c020; /* Light border */
            border-radius: 5px; /* Rounded corners */
            transition: transform 0.2s ease-in-out; /* Smooth hover transition */
        }
        .main-image:hover {
            transform: scale(1.05); /* Zoom effect on hover */
        }
        .carousel-item img {
            max-width: 50%;
            height: auto; /* Maintain aspect ratio */
            border: 1px solid #92c020; /* Light border */
            border-radius: 5px; /* Rounded corners */
            transition: transform 0.2s ease-in-out; /* Smooth hover transition */
        }
        .carousel-item img:hover {
            transform: scale(1.1); /* Zoom effect on hover */
        }
        .btn-primary {
            color: #fff; /* White text */
            background-color: #92c020; /* Green background */
            border-color: #92c020; /* Green border */
            transition: background-color 0.3s ease; /* Smooth transition */
        }
        .btn-primary:hover {
            background-color: #6aae16; /* Darker green on hover */
            border-color: #6aae16; /* Darker green border on hover */
        }
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle box shadow */
            margin-bottom: 20px; /* Space between cards */
            border-radius: 5px; /* Rounded corners */
        }
        .card-header {
            background-color: #92c020; /* Light green header */
            color: #fff; /* White text */
            border-bottom: none; /* Remove default border */
            border-top-left-radius: 5px; /* Rounded corners */
            border-top-right-radius: 5px; /* Rounded corners */
            padding: 10px 20px; /* Padding */
        }
        .card-body {
            padding: 20px; /* Padding */
        }
        .card-footer {
            background-color: #f8f9fa; /* Light background */
            border-top: 1px solid #dee2e6; /* Light border */
            padding: 10px 20px; /* Padding */
        }
        .card-title {
            font-size: 24px; /* Larger font size */
            margin-bottom: 10px; /* Space below title */
        }
        .card-text {
            font-size: 16px; /* Normal font size */
            line-height: 1.6; /* Line height for readability */
            margin-bottom: 20px; /* Space below text */
        }
    </style>
</head>
<body class="container">

<% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>

<div class="card">
    <div class="card-header">
        <h3 class="mb-0"><%= project.name %></h3>
        <p class="mb-0"><small><%= project.description %></small></p>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 text-center">
                <!-- Main Image -->
                <% if (project.image_url) { %>
                    <img class="main-image mb-3" src="<%= project.image_url %>" alt="<%= project.name %>">
                <% } %>
            </div>
            <div class="col-md-6">
                <!-- Project Information -->
                <p class="card-text">Description: <%= project.description %></p>
            </div>
        </div>

        <!-- Additional Images Carousel -->
        <% if (project.Images && project.Images.length > 0) { %>
            <div id="additionalImagesCarousel" class="carousel slide mt-4" data-ride="car   ousel">
                <div class="carousel-inner">
                    <% project.Images.forEach((image, index) => { %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <img src="<%= image.url %>" alt="Additional Image" class="d-block w-50">
                        </div>
                    <% }) %>
                </div>
                <a class="carousel-control-prev" href="#additionalImagesCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#additionalImagesCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        <% } %>
    </div>
    <div class="card-footer">
        <a style="border-radius: 10px" href="/books/edit/<%= project.id %>" class="btn btn-primary mr-2">Edit</a>
        <a style="border-radius: 10px" href="/books/delete/<%= project.id %>" class="btn btn-secondary">Delete</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>

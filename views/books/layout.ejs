</nav>

<div class="search-container">
  <label for="searchInput"></label><input type="text" id="searchInput" class="search-input" placeholder="Search projects...">
</div>

<div class="project-wrapper">

  <div class="container-fluid px-4">


    <div class="row" id="projectContainer">

      <% projects.forEach(function(project) { %>
        <div class="col-md-4">
          <div class="card">
            <% if (project.image_url) { %>
              <img class="card-img-top main-image" src="<%= project.image_url %>" alt="<%= project.name %>">
            <% } %>
            <div class="card-body">

              <h5 class="card-title"><%= project.name %></h5>
              <p class="card-text"><%= project.description %></p>
              <a href="/books/details/<%= project.id %>" class="btn btn-info btn-block"><i class="fas fa-info-circle"></i> View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>


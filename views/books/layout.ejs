<script src="/js/datatables-simple-demo.js"></script>
<script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
    const searchInput = document.getElementById('searchInput');
    const projectContainer = document.getElementById('projectContainer');

    searchInput.addEventListener('input', function (e) {
    const searchString = e.target.value.toLowerCase();

    Array.from(projectContainer.getElementsByClassName('card')).forEach(function (card) {
    const projectName = card.querySelector('.card-title').textContent.toLowerCase();

    if (projectName.includes(searchString)) {
    card.parentElement.style.display = 'block'; // Show matching projects
  } else {
    card.parentElement.style.display = 'none'; // Hide non-matching projects
  }
  });
  });
  });
</script>



</body>
</html>
